<Window x:Class="ACD_lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACD_lab2"
        mc:Ignorable="d"
        Title="laba2" Height="450" Width="800" Closing="OnClosing">
    <Grid>
        <Button Content="Create array 1" HorizontalAlignment="Left" Height="28" Margin="17,378,0,0" VerticalAlignment="Top" Width="100" Click="Button_CreateArray1"/>
        <Button Content="Create array 2" HorizontalAlignment="Left" Height="28" Margin="132,378,0,0" VerticalAlignment="Top" Width="100" Click="Button_CreateArray2"/>
